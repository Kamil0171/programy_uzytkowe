#include <iostream>
#include <vector>

using namespace std;

void wypisz(vector<int>tab)
{
    for (int i = 0; i < tab.size(); i++)
    {
        cout << tab[i] << " ";
    }
    cout << endl;
}

// Zad 1
void max(vector<int>tab1)
{
    int suma = 0;
    int maksymalna = 0;
    for (int i = 0; i < tab1.size(); i++)
    {
        for (int j = i; j < tab1.size(); j++)
        {
            suma += tab1[j];
            if (suma > maksymalna)
            {
                maksymalna = suma;
            }
        }
        suma = 0;
    }
    cout << "Najwieksza suma wynosi: " << maksymalna << endl;
}

// Zad 2
void ciag(vector<int>tab2)
{
    vector<int>wynik;
    int suma = 0;
    tab2.push_back(1);
    for (const auto & number : tab2)
    {
        if (number % 2 == 0)
        {
            wynik.push_back(number);
        }
        else
        {
            if (wynik.size() >= 2)
            {
                wynik.begin(), wynik.end();
                if (wynik.size() > suma)
                {
                    suma = wynik.size();
                    cout << wynik.size() << endl;
                }
            }
            wynik.clear();
        }
    }
}
// Zad 3
int sumav(vector<int>tab, int n, int a, int b)
{
    int suma = 0;
    for (int i = 0; i < n; i++)
    {
        if (tab[i] % a == 0 && tab[i] < b)
        {
            suma = suma + tab[i];
        }
    }
    return suma;
}
// Zad 4
int podstawa_potegi(int x)
{
    int podstawa = 0;
    for (int i = 2; i < x; i++)
    {
        for (int j = i; j <= x; j * i)
        {
            if (j % x == 0)
            {
                podstawa = i;
                if (podstawa > 0)
                {
                    return podstawa;
                }
            }
        }
    }
    if (podstawa == 0)
    {
        return 0;
    }
}

void potegi(int x)
{
    int podstawa = podstawa_potegi(x);
    int licznik;
    for (int i = 1; i < x; i++)
    {
        if (pow(podstawa, i) == x)
        {
            licznik = i;
        }
    }
    if (podstawa == 0)
    {
        cout << "Nie" << endl;
    }
    else
    {
        cout << "wynik y= " << podstawa << "n= " << licznik << " bo " << podstawa << " ^ " << licznik << " = " << x << endl;
    }
}
// Zad 5
bool pierwsza(int n)
{
    int d = 2;
    if (n < 2)
    {
        return false;
    }
    while (d * d <= n)
    {
        if (n % d == 0)
        {
            return false;
        }
        else
        {
            d++;
        }
    }
    return true;
}

vector<int>ilepierwszych(int ile)
{
    vector<int>wynik;
    int licznik = 0;
    int i = 1;
    while (licznik < ile)
    {
        i++;
        if (pierwsza(i))
        {
            wynik.push_back(i);
            licznik++;
        }
    }
    return wynik;
}

int main()
{
    cout << "Zad 1" << endl;
    vector<int>tab1 = { 2,4,-6,7 };
    max(tab1);

    cout << "Zad 2" << endl;
    vector<int>tab2 = { 1,8,2,4,6,7,5,12,18 };
    ciag(tab2);

    cout << "Zad 3" << endl;
    vector<int>tab = { 6,8,9,3,3,20,1 };
    cout << sumav(tab, 5, 3, 7) << endl;

    cout << "Zad 4" << endl;
    potegi(625);

    cout << "Zad 5" << endl;
    wypisz(ilepierwszych(5));
}
