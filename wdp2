#include <iostream>
#include<vector>

using namespace std;

void wypisz(vector<int>tab)
{
    for (int i = 0; i < tab.size(); i++)
    {
        cout << tab[i] << " ";
    }
    cout << endl;
}
// Zad 1
float spalanie(int km, float litr)
{
    float wynik = (km * 0.01) * litr;
    return wynik;
}
// Zad 2
vector<int>mod6(int n)
{
    vector<int>wynik;
    int licznik = 0;
    int i = 1;
    while (licznik < n)
    {
        i++;
        if (i % 6 == 0)
        {
            wynik.push_back(i);
            licznik++;
        }
    }
    return wynik;
}

int suman(int n)
{
    int wynik = 0;
    int licznik = 0;
    int i = 1;
    while (licznik < n)
    {
        i++;
        if (i % 6 == 0)
        {
            wynik += i;
            licznik++;
        }
    }
    return wynik;
}
// Zad 3
int potega(int x, int n)
{
    int wynik = x;
    if (n == 0)
    {
        return 1;
    }
    for (int i = 1; i < n; i++)
    {
        wynik *= x;
    }
    return wynik;
}
// Zad 4
vector<int>zamiana(int n)
{
    vector<int>wynik;
    while (n != 0)
    {
        wynik.push_back(n % 10);
        n /= 10;
    }
    reverse(wynik.begin(), wynik.end());
    return wynik;
}

vector<int>odwrocona(int n)
{
    vector<int>wynik;
    while (n != 0)
    {
        wynik.push_back(n % 10);
        n /= 10;
    }
    return wynik;
}

bool czy_palindrom(vector<int>zamiana, vector<int>odwrocona)
{
    for (int i = 0; i < zamiana.size(); i++)
    {
        if (zamiana[i] == odwrocona[i])
        {
            return true;
        }
        else
        {
            return false;
        }
    }
}
// Zad 5
void wydrukuj(int w)
{
    int pom = 2;
    for (int i = 0; i < w; i++)
    {
        for (int j = 0; j <= i; j++)
        {
            cout << pom * j + pom << " ";
        }
        pom *= 2;
        cout << endl;
    }
}

int main()
{
    cout << "Zad 1" << endl;
    cout << spalanie(150, 8) << endl;

    cout << "Zad 2" << endl;
    wypisz(mod6(4));
    cout << suman(4) << endl;

    cout << "Zad 3" << endl;
    cout << potega(2, 3) << endl;

    cout << "Zad 4" << endl;
    int liczba = 80008;
    cout << "Wczytana liczba" << endl;
    wypisz(zamiana(liczba));
    cout << "Odwrocona liczba" << endl;
    wypisz(odwrocona(liczba));
    cout << "Czy to jest palindrom? " << czy_palindrom(zamiana(liczba), odwrocona(liczba)) << endl;

    cout << "Zad 5" << endl;
    wydrukuj(5);
}
