#include <iostream>
#include <vector>

using namespace std;

void wypisz(vector<int>tab)
{
    for (int i = 0; i < tab.size(); i++)
    {
        cout << tab[i] << " ";
    }
    cout << endl;
}

// Zadanie 1

vector<int>mod5(int n)
{
    vector<int>wynik;
    int licznik = 0;
    int i = 1;
    while (licznik < n)
    {
        i++;
        if (i % 5 == 0)
        {
            wynik.push_back(i);
            licznik++;
        }
    }
    return wynik;
}

int suma(int n)
{
    int wynik = 0;
    int licznik = 0;
    int i = 1;
    while (licznik < n)
    {
        i++;
        if (i % 5 == 0)
        {
            wynik += i;
            licznik++;
        }
    }
    return wynik;
}

// Zadanie 2

float spalanie(float spalanie100km, float litr)
{
    float wynik1 = litr / spalanie100km;
    float wynik = wynik1 * 100;
    return wynik;
}

// Zadanie 3

int silnia(int n)
{
    int wynik = 1;
    for (int i = n; i > 1; i--)
    {
        wynik = wynik * i;
    }
    return wynik;
}

// Zadanie 4
void wydrukuj(int w)
{
    int pom = 2;
    for (int i = 0; i < w; i++)
    {
        for (int j = 0; j <= i; j++)
        {
            cout << pom * j + pom << " ";
        }
        pom += 2;
        cout << endl;
    }
}

// Zadanie 5

vector<int>zamiana(int n)
{
    vector<int>wynik;
    while (n != 0)
    {
        wynik.push_back(n % 10);
        n /= 10;
    }
    reverse(wynik.begin(), wynik.end());
    return wynik;
}

vector<int>odwrocona(int n)
{
    vector<int>wynik;
    while (n != 0)
    {
        wynik.push_back(n % 10);
        n /= 10;
    }
    return wynik;
}

bool czy_polidrom(vector<int>zamiana, vector<int>odwrocona)
{
    for (int i = 0; i < zamiana.size(); i++)
    {
        if (zamiana[i] == odwrocona[i])
        {
            return true;
        }
        else
        {
            return false;
        }
    }
}

int main()
{
    cout << "Zadanie 1" << endl;
    wypisz(mod5(4));
    cout << suma(4) << endl;

    cout << "Zadanie 2" << endl;
    cout << spalanie(12, 5) << endl;

    cout << "Zadanie 3" << endl;
    cout << silnia(5) << endl;

    cout << "Zadanie 4" << endl;
    wydrukuj(5);

    cout << "Zadanie 5" << endl;
    int liczba = 80008;
    cout << "Podaba liczba: " << endl;
    wypisz(zamiana(liczba));
    cout << "Odwrocona liczba: " << endl;
    wypisz(odwrocona(liczba));
    cout << "Czy to jest polidrom? " << czy_polidrom(zamiana(liczba), odwrocona(liczba)) << endl;
}
